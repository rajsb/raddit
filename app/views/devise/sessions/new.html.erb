<div class="col-md-4 mx-auto text-center">
  <h2 class="mb-5">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-3">
      <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: 'Email address' %>
    </div>

    <div class="mb-3">
      <%= f.password_field :password, class: "form-control", autocomplete: "current-password", placeholder: "Password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-3 text-start">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "form-label" %>
      </div>
    <% end %>

    <div class="mb-5 d-grid">
      <%= f.submit "Log in", class:"btn btn-lg btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
