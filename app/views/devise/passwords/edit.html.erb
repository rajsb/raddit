<div class="col-md-4 mx-auto text-center">
<h2 class="mb-5">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mb-3">
      <%= f.password_field :password, class: "form-control", autofocus: true, autocomplete: "new-password", placeholder: 'Password' %>
    </div>

    <div class="mb-3">
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: 'Password confirmation' %>
    </div>

    <div class="mb-5 d-grid">
      <%= f.submit "Change my password", class:"btn btn-lg btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
